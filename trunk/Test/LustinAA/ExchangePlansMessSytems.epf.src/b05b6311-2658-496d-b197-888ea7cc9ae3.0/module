Процедура ТипАдаптераПриИзменении(Элемент)
	параметрОтбора = Новый Структура("ТипАдаптера", Элемент.Значение);
	полеПараметровАдаптера.Очистить();
	полеПараметровАдаптера.Колонки.Очистить();
	
	массивСтрокПараметров = деревоПараметровАдаптеров.Строки.НайтиСтроки(параметрОтбора);
	Если массивСтрокПараметров.Количество() = 1 Тогда
		массивИменПараметров = массивСтрокПараметров[0].Строки.ВыгрузитьКолонку("ИмяПараметра");
		массивЗначениеПараметров = массивСтрокПараметров[0].Строки.ВыгрузитьКолонку("ЗначениеПараметра");
		//пипецный код - надо коллекцию пустую досоздать
		полеПараметровАдаптера.Колонки.Добавить("ИмяПараметра");
		полеПараметровАдаптера.Колонки.Добавить("ЗначениеПараметра");
		для Н = 1 по массивИменПараметров.Количество() Цикл полеПараметровАдаптера.Добавить();	КонецЦикла;
		// ненавижу подобные переливки коллекций
		полеПараметровАдаптера.ЗагрузитьКолонку(массивИменПараметров, "имяПараметра" ); 
		полеПараметровАдаптера.ЗагрузитьКолонку(массивЗначениеПараметров, "ЗначениеПараметра");
		ЭлементыФормы.полеПараметровАдаптера.СоздатьКолонки();
		ЭлементыФормы.полеПараметровАдаптера.ОбновитьСтроки();
	КонецЕсли;
КонецПроцедуры

