Функция СоздатьОбъектСИсключением(имяОбъекта) Экспорт
	Попытка
		объект = Новый COMОбъект(имяОбъекта);
		//тут будет обработка возвращаемого значения
		
		Сообщить("объект создан "+имяОбъекта, СтатусСообщения.Информация);
		Возврат объект;
	Исключение
		Инфо = ИнформацияОбОшибке();
		Сообщить("Описание='" + Инфо.Описание + "'", СтатусСообщения.Важное);
		Сообщить("Описание='" + Инфо.Описание + "'", СтатусСообщения.Важное);
		Сообщить("ИмяМодуля='" + Инфо.ИмяМодуля + "'", СтатусСообщения.Важное);
		Сообщить("НомерСтроки=" + Инфо.НомерСтроки, СтатусСообщения.Важное);
		Сообщить("ИсходнаяСтрока='" + Инфо.ИсходнаяСтрока + "'", СтатусСообщения.Важное);
	КонецПопытки;
КонецФункции

Функция ПолучитьТипыАдаптеров() Экспорт
	утилиты = СоздатьОбъектСИсключением("MOMAdapters.Locator");
	массивТипов = утилиты.GetComponentsList();
	списокТипов = Новый СписокЗначений();
	списокТипов.ЗагрузитьЗначения(массивТипов.Выгрузить());
	Возврат списокТипов;
КонецФункции



